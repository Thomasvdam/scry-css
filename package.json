{
  "name": "scryss",
  "version": "0.2.0",
  "description": "Suggestion engine for LESS/SASS variables and mixins",
  "repository": {
    "type": "git",
    "url": "https://github.com/ovidiubute/scryss.git"
  },
  "scripts": {
    "test": "mocha test",
    "test:watch": "npm run test -- -w",
    "test:coverage": "istanbul cover node_modules/.bin/_mocha -- -- test",
    "test:codecov": "npm run test:coverage && node_modules/.bin/codecov",
    "lint": "eslint src/**/*.js"
  },
  "bin": {
    "scry-css": "src/bin/scry-css.js"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "author": "Ovidiu Bute <ovidiu.bute@gmail.com>",
  "license": "MIT",
  "keywords": [
    "css",
    "less",
    "sass",
    "tools",
    "helpers",
    "discovery",
    "search",
    "command line",
    "variables",
    "mixins"
  ],
  "dependencies": {
    "colour": "0.7.1",
    "commander": "2.9.0",
    "fuzzy": "0.1.1",
    "lodash": "4.14.1",
    "node-dir": "0.1.15",
    "promised-io": "0.3.5"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "eslint": "3.2.0",
    "eslint-config-airbnb-base": "5.0.1",
    "eslint-plugin-import": "1.12.0",
    "istanbul": "0.4.4",
    "mocha": "2.5.3",
    "pre-commit": "1.1.3"
  },
  "engines": {
    "node": "~6.0.0"
  },
  "preferGlobal": true
}
